function verificarIdade() {

    var idade = parseInt(prompt("Digite sua idade:"));


    if (idade < 18) {
        alert("Você é menor de idade.");
    } else if (idade === 18) {
        alert("Você acabou de atingir a maioridade.");
    } else {
        alert("Você é maior de idade.");
    }
}


verificarIdade();
